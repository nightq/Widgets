<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item
        android:width="16dp"
        android:height="16dp"
        android:gravity="center" >
        <scale
            android:scaleGravity="center"
            android:scaleHeight="50%"
            android:scaleWidth="50%">
            <shape
                android:shape="oval"
                android:useLevel="true">
                <size
                    android:width="16dp"
                    android:height="16dp" />
                <solid android:color="@color/black_10" />
            </shape>
        </scale>
    </item>

    <item
        android:width="8dp"
        android:height="8dp"
        android:left="4dp"
        android:top="4dp"
        android:right="4dp"
        android:bottom="4dp">
        <shape
            android:shape="oval"
            android:useLevel="false">
            <size
                android:width="8dp"
                android:height="8dp" />
            <solid android:color="@color/white" />
        </shape>
    </item>

</layer-list>